<Window x:Class="Pharmacy_Manage.GUI.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Quản Trị Nhà Thuốc ehe" Height="750" Width="1250"
        WindowStartupLocation="CenterScreen" Background="#F4F7F6">

    <Window.Resources>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2C3E50">
        </Border>

        <Grid Grid.Column="1" Margin="25">
            <TabControl x:Name="MainTabControl" Background="Transparent" BorderThickness="0">
                <TabControl.ItemContainerStyle>
                    <Style TargetType="TabItem">
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </Style>
                </TabControl.ItemContainerStyle>

                <TabItem>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Thống kê nhanh" FontSize="26" FontWeight="Bold" Foreground="#333" Margin="0,0,0,25"/>

                            <UniformGrid Columns="3">
                                <Border Background="White" CornerRadius="12" Margin="10" Padding="25">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="2"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <TextBlock Text="Doanh thu ngày" Foreground="#7F8C8D" FontSize="14"/>
                                        <TextBlock Text="12.450.000 đ" FontSize="28" FontWeight="Bold" Foreground="#27AE60" Margin="0,10,0,0"/>
                                    </StackPanel>
                                </Border>
                            </UniformGrid>

                            <Border Background="White" CornerRadius="12" Margin="10,20,10,10" Padding="25">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="2"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="Biểu đồ doanh thu 7 ngày gần nhất" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" Foreground="#2C3E50"/>
                                    <lvc:CartesianChart Height="320" Hoverable="True" Series="{Binding RevenueSeries}">
                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis Title="Ngày" Labels="{Binding ChartLabels}"/>
                                        </lvc:CartesianChart.AxisX>
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis Title="Doanh thu" LabelFormatter="{Binding Formatter}"/>
                                        </lvc:CartesianChart.AxisY>
                                    </lvc:CartesianChart>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>



                <TabItem>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>